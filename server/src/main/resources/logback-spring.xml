<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <springProperty name="SLACK_WEBHOOK_URI" source="logging.slack.webhook-uri"/>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wEx"
                    converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <!-- CONSOLE appender 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%clr(%d{yyyy-MM-dd HH:mm:ss.SSS} %t ${PID:-}){faint} %clr([%-5p]) %clr([%-40.40logger{35}]){cyan} %clr(:){faint} %m%n</Pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
    </root>

    <springProfile name ="prod">
        <include resource ="appender/aws-log-appender.xml"/>
        <include resource ="appender/slack-async-error-appender.xml"/>

        <logger name="org.hibernate.SQL" level="DEBUG">
            <appender-ref ref="ASYNC_AWS"/>
        </logger>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE">
            <appender-ref ref="ASYNC_AWS"/>
        </logger>
        <logger name="org.springframework.web.servlet.DispatcherServlet" level="DEBUG">
            <appender-ref ref="ASYNC_AWS"/>
        </logger>
        <logger name="org.springframework.orm.jpa.JpaTransactionManager" level="DEBUG">
            <appender-ref ref="ASYNC_AWS"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="ASYNC_AWS"/>
            <appender-ref ref="ASYNC_SLACK_ERROR"/>
        </root>
    </springProfile>

    <springProfile name = "dev">
        <include resource ="appender/slack-async-error-appender.xml"/>
        <include resource="appender/aws-log-appender.xml"/>

        <logger name="org.hibernate.SQL" level="DEBUG">
            <appender-ref ref="ASYNC_AWS"/>
        </logger>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE">
            <appender-ref ref="ASYNC_AWS"/>
        </logger>
        <logger name="org.springframework.web.servlet.DispatcherServlet" level="DEBUG">
            <appender-ref ref="ASYNC_AWS"/>
        </logger>
        <logger name="org.springframework.orm.jpa.JpaTransactionManager" level="DEBUG">
            <appender-ref ref="ASYNC_AWS"/>
        </logger>

        <root level="DEBUG">
            <appender-ref ref="ASYNC_AWS"/>
            <appender-ref ref="ASYNC_SLACK_ERROR"/>
        </root>
    </springProfile>
</configuration>